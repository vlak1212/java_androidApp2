<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/input_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Topic"/>

    <EditText
        android:id="@+id/input_suri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_topic"
        android:layout_marginTop="16dp"
        android:hint="Enter Server URI"/>

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_suri"
        android:layout_marginTop="16dp"
        android:text="Connect"/>

    <Button
        android:id="@+id/btn_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_connect"
        android:layout_marginTop="16dp"
        android:text="Change"/>
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_change"
        android:layout_marginTop="16dp"
        android:text="Status"/>

</RelativeLayout>
